<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
  <div class="row">
    <div class="col msg-window-container">
      <div class="card" >
        <div class="card-header"><span class="card-title">Chat with Everyone</span></div>
        <div class="card-body" >
          <div class="msg to">Hello! How do you feel today?</div>
        </div>
        <div class="card-footer">
          <div class="input-group"  >
            <input class="form-control" type="text" placeholder="Send message..."/>
            <div class="input-group-append">
              <button class="btn btn-success" type="button">Send</button>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
